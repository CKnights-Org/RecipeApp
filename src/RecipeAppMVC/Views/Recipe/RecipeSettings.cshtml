@using RecipeAppMVC.ViewModels.Recipe;
@model RecipeSettingsViewModel

<div class="py-5 text-center">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-lg-6 col-10">
                <h1>Set Up the recipe page</h1>
                <p class="mb-3">When, while the lovely valley teems with vapour around me, and the meridian sun strikes the upper surface of the impenetrable foliage of my trees.</p>

                @using (Html.BeginForm("RecipeSettings", "Recipe", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(a => a.NumberOfIngredients)
                        @Html.TextBoxFor(a => a.NumberOfIngredients, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.NumberOfIngredients)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.Visibility)
                        @Html.TextBoxFor(a => a.Visibility, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Visibility)
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            @Html.CheckBoxFor(a => a.Aggreement, new { @class = "form-check-input" })
                            <label class="form-check-label" for="form21"> I Agree with <a href="#">Term and Conditions</a> of the service </label>
                            <br>
                            <div class="text-danger">@Html.ValidationMessageFor(a => a.Aggreement)</div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Lets start making it!</button>
                }
            </div>
        </div>
    </div>
</div>
