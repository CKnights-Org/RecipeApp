@model RecipeAppMVC.Models.Recipe.RecipeDetailModel
@{
    ViewData["Title"] = "Editing recipe";
}

<div class="py-5 text-center text-white" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, .75), rgba(0, 0, 0, .75)), url(https://static.pingendo.com/cover-bubble-dark.svg);  background-position: center center, center center;  background-size: cover, cover;  background-repeat: repeat, repeat;">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-md-10 p-4">
                <h1 class="text-light">Create your magical recipe</h1>
                <p class="mb-4 lead text-light">When, while the lovely valley teems with vapour around me.</p>
                @using (Html.BeginForm("Edit", "Recipe", FormMethod.Post))
                {
                    @Html.HiddenFor(a => a.Id)
                    <div class="form-group">
                        @Html.LabelFor(a => a.Name)
                        @Html.TextAreaFor(a => a.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.Description)
                        @Html.TextAreaFor(a => a.Description, new { @class = "form-control", rows = "3" })
                    </div>
                    <br>
                    <h1> Ingredients: </h1>
                    <br>

                    for (int i = 0; i < Model.Ingredients.Count; i++)
                    {
                        if (Model.Ingredients[i].Ingredient != null)
                        {
                            <div class="form-row">
                                <div class="form-group col-md-2"> </div>
                                <div class="form-group col-md-4">
                                    <select class="form-select" asp-for="@Model.Ingredients[i].Ingredient.Id" asp-items="@Model.Ingredients[i].IngredientsSelection">
                                        <option selected value="">Please select an Ingredient</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-2">
                                    <input class="form-control" asp-for="@Model.Ingredients[i].Ingredient.Amount">
                                </div>
                                <div class="form-group col-md-2">
                                    <input class="form-control" asp-for="@Model.Ingredients[i].Ingredient.TypeOfAmount">
                                </div>
                                <div class="form-group col-md-2"> </div>
                            </div>
                        }
                    }
                    <br>
                    <button type="submit" class="btn btn-success">Make the Recipe!</button>
                }
            </div>
        </div>
    </div>
</div>