@model RecipeAppMVC.ViewModels.Recipe.CreateViewModel
@using RecipeAppDAL.Models
@{
    ViewData["Title"] = "Create new Recipe";
}

<form method="post">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <h3>Are you sure you want to delete the recipe?</h3>
            <intput type="hidden" asp-for="Id" />
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Ingredients: </label>
                <ul>
                    @for (var i = 0; i < @Model.Ingredients.Count; i++)
                    {
                        <li>
                            <input type="hidden" asp-for="Ingredients[i].Id">
                            <input type="hidden" asp-for="Ingredients[i].TypeOfAmount">
                            <input type="hidden" asp-for="Ingredients[i].Amount">
                            <input type="hidden" asp-for="Ingredients[i].Name">
                            @Model.Ingredients[i].Amount @Model.Ingredients[i].TypeOfAmount of
                            @Model.Ingredients[i].Name
                        </li>
                    }
                </ul>
                <a type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addIngredientModal">Add Ingredient</a>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create new Recipe" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Go back</a>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
    <div class="modal fade" id="addIngredientModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addIngredientModalTitle">Add Ingredient</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <select class="form-select" asp-for="NewIngredient.Id"
                        asp-items="@Model.IngredientsSelection">
                        <option selected value="">Please select an Ingredient</option>
                    </select>
                    <div class="form-group row">
                        <div class="col">
                            <label asp-for="NewIngredient.Amount" class="form-label"></label>
                            <input asp-for="NewIngredient.Amount" class="form-control" />
                        </div>
                        <div class="col">
                            <label asp-for="NewIngredient.TypeOfAmount" class="form-label"></label>
                            <input asp-for="NewIngredient.TypeOfAmount" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add Ingredient</button>
                </div>
            </div>
        </div>
    </div>
</form>