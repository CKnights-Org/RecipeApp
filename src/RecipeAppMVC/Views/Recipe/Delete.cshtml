@model RecipeAppMVC.ViewModels.Recipe.DeleteViewModel
@{
    ViewData["Title"] = "Confirm deletion";
}

<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <h3>Are you sure you want to delete the recipe?</h3>
        <form asp-action="Delete">
            <intput type="hidden" asp-for="Id" />
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="col">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group">
                <label>Ingredients: </label>
                <ul>
                    @foreach (var item in Model.Ingredients)
                    {
                        <li>
                            @item.Amount @item.TypeOfAmount of @item.Ingredient.Name
                        </li>
                    }
                </ul>
            </div>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-primary" asp-action="Index">Go back</a>
            </div>
        </form>
    </div>
    <div class="col-1"></div>
</div>